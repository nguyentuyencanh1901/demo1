<%-include ('../Trangnguoidung/Header.ejs')%>;
<link rel="stylesheet" href="../dist/css/Trangchu.css">

<div class="container" style="margin-top: 20px;">
  
    <div class="big-card">
      
        <h2>Kết quả tìm kiếm </h2>
        
        <div class="row">
          <% cat.forEach(item=>{%>
          <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
            <div style="height: 340px;margin: 20px 0px;">
              
                  
              <div class="cardd" style="height: 350px">
               <a href="/Chi-tiet/<%=item.id%>"> <img class="img" src="/img/<%=item.img%>" alt="Card image" title="<%=item.name%>" width="200px"></a>
               
                <div class="card-body">
                  <h5 class="card-title" style="color: black;"><%=item.name%></h5>
                  <p class="card-text" style="color: black;">
                    <del style="color: red; margin: 40px 10px;">
                      Giá: <%= new Intl.NumberFormat('VND', { maximumSignificantDigits: 3 }).format(item.gia,) %> $</del>
                    Giá: <%= new Intl.NumberFormat('VND', { maximumSignificantDigits: 3 }).format(item.giamgia,) %> $
                  </p>
                  <a href="#" class=" button" style="width: 250px;margin: 0px 70px;">THÊM VÀO GIỎ</a>
                </div>
              </div>
              
            </div>  
          </div>
          <%})%>  
        </div>
        
     
    </div>
  </div>

  <%-include ('../Trangnguoidung/Footer.ejs')%>;