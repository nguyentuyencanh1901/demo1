<%- include('../header.ejs') %>

<div class="container mt-3">
  <h2>Cập nhật nhóm sản phẩm</h2>

  <form action="/post-edit-Chungloai" method="post">
    <div class="container mt-3">

      <div class="mb-3">
        <label for="">Loài cây : </label>
        <select name="trangthai" class="form-select">
            <option value="0">Chọn trạng thái cho sản phẩm</option>
            <option value="1">Cây Bonsai</option>
            <option value="2">Cây xương Rồng</option>
            <option value="3">Cây Trong Nhà</option>
            <option value="4">Cây Văn Phòng</option>
        </select>
    </div>
      <input type="hidden" name="id" value="<%= cate.id %>">

      <div class="mb-3 ">
        <label for="">Giống loài :</label>
        <input type="text" class="form-control" placeholder="Nhập Tên" value="<%= cate.name %>"  name="name">
      </div>




      <div class="mb-3">
        <label for="">Tên Loài : </label>
        <input type="text" class="form-control" placeholder="Nhập tên loài" value="<%= cate.filename %>" name="filename">
      </div>



      <button type="submit" class="btn btn-primary">Lưu lại</button>
      <a href="/chungloai" class="btn btn-danger">Quay lại</a>
  </form>
</div>


<%- include('../footer.ejs') %>